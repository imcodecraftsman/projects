<div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

          <!-- Title -->
          <h1 class="mt-4">{{post.title}}</h1>

          <!-- Author -->
          <p class="lead">
            by
            <a href="javascript:void(0)">{{post.user.firstName}} {{post.user.lastName}}</a>
          </p>

          <hr>

          <!-- Date/Time -->
          <p>Posted on {{generateDate post.date 'MMMM Do YYYY'}}</p>

          <hr>

          <!-- Preview Image -->
          <img class="img-fluid rounded" src="/uploads/{{post.post_image}}" alt="">

          <hr>

          <p>{{post.body}}</p>

          <hr>
          {{#if user}}
              {{#if post.allowComments}}
                <!-- Comments Form -->
                <div class="card my-4">
                  <h5 class="card-header">Leave a Comment:</h5>
                  <div class="card-body">
                    <form action="/admin/comments" method="post">
                      <div class="form-group">
                        <input type="hidden" name="post_id" value="{{post._id}}">
                        <textarea class="form-control" rows="3" name="body"></textarea>
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>
              {{else}}
                <h3 class="text-danger">Comments are not allowed for this post</h3>
                <hr>
              {{/if}}
            {{else}}
                <p class="text-danger">You need to login to comment <a href="/login">Login</a></p>
              <hr>
          {{/if}}
          <!-- Single Comment -->
          {{#each post.comments}}
            <div class="media mb-4">
              <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
              <div class="media-body">
                <h5 class="mt-0">{{user.firstName}} {{user.lastName}}</h5>
                {{body}}
              </div>
            </div>
          {{/each}}
        </div>

        <!-- Sidebar Widgets Column -->
        {{> home/sidebar}}

      </div>