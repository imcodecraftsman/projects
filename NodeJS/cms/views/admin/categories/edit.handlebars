<h1>Edit Category</h1>
<div class="row">
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <form action="/admin/categories/update/{{category._id}}?_method=PUT" method="post">
                    <div class="form-group">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" class="form-control" placeholder="Enter Category Name" value="{{category.name}}">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Update Category">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>